<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/title_layout"/>

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="60dp">


            <ImageView
                android:id="@+id/yaJinImage"
                android:layout_marginLeft="30dp"
                android:src="@mipmap/jin_du_1"
                android:layout_width="50dp"
                android:layout_height="40dp" />
            <View
                android:id="@+id/yaJinView"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/blue_green"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="2dp"/>

            <ImageView
                android:id="@+id/identifyImage"
                android:src="@mipmap/jin_du_0"
                android:layout_width="50dp"
                android:layout_height="40dp" />

            <View
                android:id="@+id/identifView"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/hui"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="2dp"/>

            <ImageView
                android:id="@+id/shenHeImage"
                android:src="@mipmap/jin_du_0"
                android:layout_width="50dp"
                android:layout_height="40dp" />

            <View
                android:id="@+id/shenHeView"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/hui"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="2dp"/>

            <ImageView
                android:id="@+id/paiDanRenZhengImage"
                android:layout_marginRight="30dp"
                android:src="@mipmap/pai_dan_ren_zheng"
                android:layout_width="50dp"
                android:layout_height="40dp" />

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="20dp">


            <TextView
                android:textSize="12sp"
                android:layout_marginLeft="30dp"
                android:text="@string/ya_jin_jiao_na"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="4dp"/>

            <TextView
                android:textSize="12sp"
                android:text="@string/qi_ye_ren_zheng"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="4dp"/>

            <TextView
                android:gravity="center_horizontal"
                android:textSize="12sp"
                android:text="@string/shen_he"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="4dp"/>

            <TextView
                android:gravity="center_horizontal"
                android:textSize="12sp"
                android:text="@string/pai_dan"
                android:layout_marginRight="30dp"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="4dp"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:background="@color/hui"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <FrameLayout
        android:id="@+id/identityFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>



</LinearLayout>