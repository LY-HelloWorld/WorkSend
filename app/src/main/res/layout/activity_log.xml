<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/img_log_bg_boss"
        android:layout_width="match_parent"
        android:layout_height="280dp">

        <LinearLayout
            android:id="@+id/lv_title_layout"
            android:background="@color/translate"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_layout_height">

            <ImageView
                style="@style/img_return"
                android:id="@+id/return_image" />
            <TextView
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="企业管理中心"
                android:gravity="center"
                android:id="@+id/tilte_text"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:src="@mipmap/ic_launcher"
                android:visibility="invisible"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/personal_center"
                android:layout_width="30dp"
                android:layout_height="30dp" />

        </LinearLayout>


    </LinearLayout>
    
    <EditText
        android:singleLine="true"
        android:inputType="number"
        android:maxLength="11"
        android:digits="0123456789"
        android:id="@+id/edx_log_number"
        android:hint="请输入手机号"
        style="@style/edx_bg"/>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edx_log_bg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:digits="0123456789"
            android:maxLength="4"
            android:inputType="number"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:textSize="12sp"
            android:layout_height="40dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/edx_log_password"
            android:hint="请输入验证码"
            android:background="@color/translate"/>

        <TextView
            android:id="@+id/tx_get_security_code"
            android:gravity="center"
            android:text="获取验证码"
            android:layout_width="120dp"
            android:layout_height="match_parent" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_log"
        android:text="@string/log"
        android:textColor="@color/white"
        android:background="@drawable/bt_log_corner_bg"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="220dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/lv_phone_num"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="160dp"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/we_chat"
            android:layout_width="10dp"
            android:layout_height="20dp" />

        <TextView
            android:layout_marginLeft="3dp"
            android:textColor="@color/blue_green"
            android:textSize="@dimen/tx_text_size_small"
            android:text="微信登录"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>


</LinearLayout>
