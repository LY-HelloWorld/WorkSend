<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:text="项目名称:"
            style="@style/tx_title"/>

        <EditText
            android:id="@+id/edx_progress_name"
            android:hint="请输入"
            style="@style/edx_resume" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:text="项目开始时间:"
            style="@style/tx_title"/>

        <EditText
            android:id="@+id/edx_progress_start_time"
            android:hint="请输入"
            style="@style/edx_resume" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:text="项目结束时间:"
            style="@style/tx_title"/>

        <EditText
            android:id="@+id/edx_progress_end_time"
            android:hint="请输入"
            style="@style/edx_resume"  />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:text="职位:"
            style="@style/tx_title"/>

        <EditText
            android:id="@+id/edx_work"
            android:hint="请输入"
            style="@style/edx_resume" />

    </LinearLayout>

    <TextView
        android:text="主要职责"
        style="@style/tx_title"/>

    <EditText
        android:id="@+id/edx_main_duty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edx_resume_bg"
        android:gravity="start"
        android:hint="主要职责 至少6个字"
        android:maxLines="6"
        android:minLines="6"
        android:padding="5dp"
        android:textSize="@dimen/tx_text_size_small" />



</LinearLayout>