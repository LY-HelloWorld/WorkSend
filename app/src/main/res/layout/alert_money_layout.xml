<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tx_title"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:textColor="@color/blue_green"
        android:gravity="center"
        android:text="请输入充值金额"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <EditText
        android:hint="请输入金额"
        android:id="@+id/edx_input_money"
        android:digits="0123456789."
        android:inputType="number"
        android:textColor="@color/text_hui"
        android:textSize="@dimen/tx_text_size_small"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="10dp"
        android:background="@drawable/edx_log_bg"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <Button
            android:id="@+id/btn_cancel"
            android:text="取消"
            android:background="@drawable/btn_cancel_big_corner"
            android:layout_width="80dp"
            android:layout_height="30dp" />

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/btn_recharge"
            android:textColor="@color/white"
            android:text="确定"
            android:background="@drawable/btn_big_corner"
            android:layout_width="80dp"
            android:layout_height="30dp" />

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

    </LinearLayout>

</LinearLayout>