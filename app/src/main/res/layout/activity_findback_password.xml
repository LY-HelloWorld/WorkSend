<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/lv_bg"
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:background="@drawable/img_log_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lv_title_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_layout_height"
            android:background="@color/translate"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/return_image"
                style="@style/img_return" />

            <TextView
                android:id="@+id/tilte_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="找回密码"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/personal_center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:src="@mipmap/ic_launcher"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        style="@style/login_register_lin_bg"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="9dp"
            android:src="@drawable/img_phone_number" />

        <EditText
            android:id="@+id/edx_log_number"
            style="@style/edx_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:digits="0123456789"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true" />


    </LinearLayout>

    <TextView
        android:id="@+id/tx_phone_error_hint"
        style="@style/tx_log_register_hint"
        android:text="手机号输入错误"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/login_register_lin_bg"
            android:layout_marginRight="0dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="9dp"
                android:src="@drawable/img_password" />

            <EditText
                android:id="@+id/edx_verficode"
                style="@style/edx_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/translate"
                android:digits="0123456789"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="11"
                android:singleLine="true" />


        </LinearLayout>

        <TextView
            android:id="@+id/tx_verificoe"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/bt_log_corner_bg"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/tx_verify_error_hint"
        style="@style/tx_log_register_hint"
        android:text="验证码输入错误"
        android:visibility="invisible" />


    <LinearLayout
        style="@style/login_register_lin_bg"
        android:layout_marginTop="4dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="9dp"
            android:src="@drawable/img_password" />

        <EditText
            android:id="@+id/edx_log_password"
            style="@style/edx_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/translate"
            android:digits="0123456789"
            android:hint="请输入密码"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true" />


    </LinearLayout>

    <TextView
        android:id="@+id/tx_password_error_hint"
        style="@style/tx_log_register_hint"
        android:text="密码输入错误"
        android:visibility="invisible" />


    <LinearLayout
        style="@style/login_register_lin_bg"
        android:layout_marginTop="4dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="9dp"
            android:src="@drawable/img_password" />

        <EditText
            android:id="@+id/edx_re_log_password"
            style="@style/edx_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/translate"
            android:digits="0123456789"
            android:hint="请再次输入密码"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true" />


    </LinearLayout>

    <TextView
        android:id="@+id/tx_re_password_error_hint"
        style="@style/tx_log_register_hint"
        android:text="两次密码输入不同"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_find"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bt_log_corner_bg"
        android:text="找回密码"
        android:textColor="@color/white" />


</LinearLayout>